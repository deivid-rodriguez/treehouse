<%= form_with(model: query) do |form| %>
  <% if query.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(query.errors.count, "error") %> prohibited this query from being saved:</h2>

      <ul>
        <% query.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :queryable_type, style: "display: block" %>
    <%= form.select :queryable_type, Queryable::TYPES %>
  </div>

  <%# TODO: show a partial depending on the selected queryable_type (with form fields for any attributes it has) %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
